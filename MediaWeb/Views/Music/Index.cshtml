@model MediaWeb.Models.Media.Music.MusicIndexViewModel

<div>
    <h1>
        Hier een overzicht van al je muziek
    </h1>
</div>

<div>
    <span>
        Bekijk je collectie!
    </span>
    @if (Model.Music.Count() == 0)
    {
        <span>
            Het ziet er naar uit dat je nog geen liedjes hebt in je collectie!
            Maak er snel eentje aan!
        </span>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var media in Model.Music)
                {
                    <tr>
                        <td>@media.Title</td>
                        <td>
                            <a asp-controller="Music" asp-action="Detail" asp-route-model="@media">Detail</a>
                        </td>
                        <td>
                            <a asp-controller="Music" asp-action="Edit" asp-route-model="@media">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="Music" asp-action="Delete" asp-route-model="@media">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div>
    <a asp-controller="Music" asp-action="Create">Maak een nieuw liedje aan</a>
</div>

<div>
    <a asp-controller="Music" asp-action="Search">Zoek naar bestaande muziek op onze website</a>
</div>


<div class="align-bottom">
    <a asp-controller="Media" asp-action="Index">Terug naar algemeen overzicht</a>
</div>