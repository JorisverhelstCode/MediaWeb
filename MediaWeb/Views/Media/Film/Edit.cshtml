@model MediaWeb.Models.Film.FilmEditViewModel

    <form asp-controller="Film" asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Url"></label>
            <input class="form-control" asp-for="Url" />
            <span class="text-danger" asp-validation-for="Url"></span>
        </div>

        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input class="form-control" asp-for="ReleaseDate" />
            <span class="text-danger" asp-validation-for="ReleaseDate"></span>
        </div>

        <div class="form-group">
            <label asp-for="Producer"></label>
            <input class="form-control" asp-for="Producer" />
            <span class="text-danger" asp-validation-for="Producer"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button class="btn btn-primary" type="submit">Update movie</button>
    </form>